<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
      body {
        padding: 50px;
        background: #212322;
        color: #fff;
      }

      body {
        background: #FCF8F2;
        color: #2a292e;
      }

      .messageContent {
        font-family: "Georgia";
        font-size: 18px;
        // border-bottom: 3px dashed #cfcfcf;
        margin-bottom: 25px;
        color: #2a292e;
      }

      .messageContent img {
        min-width: 100%;
        max-width: 100%;
        margin: 12px 0px 25px 0px;
      }

      .messageContent a {
        color: #fd6c09;
      }

      blockquote.quoteContainer .quote {
        background: #ECE8E2;
        padding: 8px;
        border-radius: 3px;
      }

      blockquote.quoteContainer .quoteExpand {
        display: none;
      }

      blockquote.messageText {
        line-height: 1.4;
      }

      .navigation {
        padding: 12px 0px;
        text-align: center;
      }

      .attachedFiles {
        display: none;
      }

      .meta {
        font-family: Georgia;
        font-weight: 700;
        font-size: 20px;
        color: #241149;
        text-align: center;
      }

      .author {
        font-size: 12px;
        font-weight: normal;
        color: #aaa;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row align-items-center">
        <div class="col-8 offset-md-2">
          <div class="meta">
            <%= @post[:timestamp] %>
            <div class="author">by <%= @post[:author] %></div>
          </div>

          <%= @post[:content] %>

          <% if @next_id %>
            <div class="navigation">
              <a href="/<%= @thread[:author] %>/<%= @thread[:id] %>?after=<%= @next_id %>" class="btn btn-primary">Next Page</a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <script>
      function removeInlineStyles(selector) {
        var elements = document.querySelectorAll(selector);
        for (el of elements) {
          el.removeAttribute("style");
        }
      }

      removeInlineStyles(".messageContent span");
    </script>
  </body>
</html>

